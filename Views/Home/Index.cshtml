@model Model.EF.mymodel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tables List GUEST_REGISTRATION</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <a class="btn btn-primary" href="/Home/Create" style="margin-left:25px"> Thêm mới</a>
            <a class="btn btn-primary" href="/GUESTINOUT/Create" style="margin-left:1100px"> GUEST_INOUT</a>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
               
            </div>
            <!-- /.panel-heading -->

            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="edit">
                    <thead>
                        <tr>
                            <th>RID</th>
                            <th>EID</th>
                            <th>RDATE</th>
                            <th>AID</th>
                            <th>REASON</th>
                            <th>ETIMEIN</th>
                            <th>ETIMEOUT</th>
                            <th>RSTATEID</th>
                            <th>NOTE</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.GUEST_REGISTRATION)
                        {
                            <tr>
                                <td id="RID">@item.RID</td>
                                <td>@item.EID</td>
                                <td>@item.RDATE</td>
                                <td>@item.AID</td>
                                <td>@item.REASON</td>
                                <td>@item.ETIMEIN</td>
                                <td>@item.ETIMEOUT</td>
                                <td>@item.RSTATEID</td>
                                <td>@item.NOTE</td>
                                <td>
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                                        Thêm khách
                                    </button>
                                    <button class="btn btn-success"><i class="glyphicon glyphicon-edit" id="editkhach"></i>Edit</button>
                                    <button class="btn btn-danger"><i class=" glyphicon glyphicon-trash" onclick="Msg()"></i>Remove</button>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
   Create
</button>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">This is Modal</h4>
            </div>
            <div class="modal-body">
                <div class="row">


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)


                        <div class="form-group">
                            <label>RDATE</label>

                            @Html.TextBoxFor(model => model.RDATE, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RDATE)

                        </div>

                        <div class="form-group">
                            <label>AID</label>

                            @Html.TextBoxFor(model => model.AID, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AID)

                        </div>

                        <div class="form-group">
                            <label>REASON</label>

                            @Html.TextBoxFor(model => model.REASON, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.REASON)

                        </div>

                        <div class="form-group">
                            <label>ETIMEIN</label>

                            @Html.TextBoxFor(model => model.ETIMEIN, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ETIMEIN)

                        </div>

                        <div class="form-group">
                            <label>ETIMEOUT</label>

                            @Html.TextBoxFor(model => model.ETIMEOUT, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ETIMEOUT)

                        </div>

                        <div class="form-group">
                            <label>RSTATEID</label>

                            @Html.TextBoxFor(model => model.RSTATEID, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RSTATEID)

                        </div>

                        <div class="form-group">
                            <label>NOTE</label>

                            @Html.TextBoxFor(model => model.NOTE, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NOTE)

                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" name="Create" value=" create" class="btn btn-primary btn-lg btn-block" />
                            </div>
                        </div>
                    }
                    <br />
                    <br />
                    <br />
                    <div>
                        <a class="btn btn-primary btn-lg btn-block" href="/Home/Index">Back to Home</a>
                    </div>


                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
